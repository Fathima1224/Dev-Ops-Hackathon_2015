<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TitleTextStyle">
        <item name="android:textColor">#423c2c</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:background">#ffc525</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="TitleRow">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHighlight">#ffffff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MenuItemTextStyle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17dp</item>
        <item name="android:text"></item>
        <item name="android:background">@null</item>
    </style>

    <style name="DefaultTextStyle">
        <item name="android:textColor">#423c2c</item>
        <item name="android:textColorHighlight">#423c2c</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="DefaultTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="PlanAttribute">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/divider_drawable</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DefaultButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/custom_btn_yellow</item>
    </style>

    <style name="TaskButtons" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/custom_btn_yellow</item>
    </style>
    <style name="DefaultEditText">
        <item name="android:textColor">#000000</item>
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:background">@drawable/edittext_background</item>!-->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="GenericProgressBackground" parent="android:Theme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GenericProgressIndicator" parent="@android:style/Widget.Holo.ProgressBar.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>
    <style name="GenericProgressIndicatorSmall" parent="@android:style/Widget.Holo.ProgressBar.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">25dip</item>
    </style>
    <style name="custom_theme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarTabTextStyle">@style/custom_actionbar_tab_text_style</item>
    </style>
    <style name="custom_actionbar_tab_text_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000000</item>
    </style>


</resources>