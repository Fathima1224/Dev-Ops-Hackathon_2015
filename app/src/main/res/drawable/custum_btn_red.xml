<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#067AE9" />
            <gradient  android:angle="-90"  android:startColor="#067AE9" android:endColor="#067AE9"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#a63f2e" />
            <solid  android:color="#067AE9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dp" />
            <stroke android:width="1dp" android:color="#e50000" />
            <gradient  android:angle="-90"  android:startColor="#e50000" android:endColor="#e50000" />
        </shape>
    </item>
</selector>